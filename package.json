{
  "name": "cypress-advanced",
  "version": "1.0.0",
  "description": "Curso de Automatización de Pruebas UI con Cypress Avanzado de Platzi",
  "main": "index.js",
  "scripts": {
		"allure:report": "npx cypress run —env allure=true",
		"allure:serve": "allure serve allure-results",
    "cucumber:tags": "cypress run --env tags=@testing",
    "delete:results": "rm -r cypress/results/* || true",
    "eslint:fix": "eslint . --fix",
    "eslint": "eslint .",
    "junit:reports": "jrm cypress/results/junit/combined-report.xml \"cypress/results/junit/.xml\"",
    "mochawesome:report": "npx mochawesome-merge \"cypress/results/mochawesome/*.json\" > mochawesome.json && npx marge mochawesome.json",
    "report": "cypress run --reporter cypress-multi-reporters --reporter-options configFile=reporter-config.json",
    "test:headless:chrome:firstTest": "cypress run --browser chrome --spec cypress/e2e/01-firstTest.cy.js",
    "test:headless:chrome": "cypress run --browser chrome",
    "test:headless:firefox": "cypress run --browser firefox",
    "test:headless": "cypress run",
    "test:ui": "cypress open",
    "test:update:snapshot": "cypress open --env= updateSnapshots=true",
    "variable:env:unix": "export NODE_ENV=DEVELOPMENT_VARIABLE && cypress open",
    "variable:env:windows": "set NODE_ENV=DEVELOPMENT_VARIABLE && cypress open",
    "variable:env": "cypress open --env VARIABLE_NAME=my-value"
  },
  "keywords": [],
  "author": "Juan Gómez",
  "license": "MIT",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "20.0.3",
    "@cypress/webpack-preprocessor": "6.0.1",
    "@shelex/cypress-allure-plugin": "2.40.2",
    "cypress": "13.7.2",
    "cypress-image-snapshot": "4.0.1",
    "cypress-multi-reporters": "1.6.4",
    "cypress-xpath": "2.0.1",
    "eslint": "9.0.0",
    "eslint-plugin-cypress": "2.15.1",
    "junit-report-merger": "6.0.3",
    "mocha-junit-reporter": "2.2.1",
    "mochawesome": "7.1.3",
    "mochawesome-merge": "4.3.0",
    "mochawesome-report-generator": "6.2.0",
    "prettier": "3.2.5",
    "webpack": "5.91.0"
  }
}
