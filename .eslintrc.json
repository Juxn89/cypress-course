{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
			"eslint:recommended",
			"plugin:cypress/recommended"
		],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
		"ignorePatterns":[
			"cypress.config.js"
		]
}
